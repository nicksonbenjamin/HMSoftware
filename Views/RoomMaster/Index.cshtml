@model IEnumerable<ClinicApp.ViewModels.RoomMasterViewModel>

@{
    ViewData["Title"] = "Room Master List";
}

<div class="container mt-4">
    <h2 class="text-primary mb-3">@ViewData["Title"]</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Room
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info">
            No rooms found. <a asp-action="Create">Create one now</a>.
        </div>
    }
    else
    {
        <!-- Wrap table in a responsive container -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(m => m.First().RoomNo)</th>
                        <th>@Html.DisplayNameFor(m => m.First().FloorNo)</th>
                        <th>@Html.DisplayNameFor(m => m.First().TypeId)</th>
                        <th>@Html.DisplayNameFor(m => m.First().NoOfBeds)</th>
                        <th>@Html.DisplayNameFor(m => m.First().RentPerDay)</th>
                        <th>@Html.DisplayNameFor(m => m.First().RentPerHour)</th>
                        <th>@Html.DisplayNameFor(m => m.First().NursingChargePerDay)</th>
                        <th>@Html.DisplayNameFor(m => m.First().AmountPerDay)</th>
                        <th>@Html.DisplayNameFor(m => m.First().IsActive)</th>
                        <th style="width:160px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.RoomNo</td>
                            <td>@item.FloorNo</td>
                            <td>@item.TypeId</td>
                            <td>@item.NoOfBeds</td>
                            <td>@item.RentPerDay?.ToString("C")</td>
                            <td>@item.RentPerHour?.ToString("C")</td>
                            <td>@item.NursingChargePerDay?.ToString("C")</td>
                            <td>@item.AmountPerDay?.ToString("C")</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-sm btn-primary">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
