@model PatientViewModel

@{
    ViewData["Title"] = "Edit Patient";
}

<h1>Edit Patient</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PatientId" />
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">UHID Type<span class="text-danger">*</span></label>
        <div class="col-sm-4">
            <select asp-for="UHIDType" class="form-control">
                <option>Patient Registration</option>
            </select>
        </div>

        <label class="col-sm-2 col-form-label">UHID No</label>
        <div class="col-sm-4">
            <input asp-for="UHIDNo" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Date<span class="text-danger">*</span></label>
        <div class="col-sm-4">
            <input asp-for="RegistrationDate" type="date" class="form-control" />
        </div>

        <label class="col-sm-2 col-form-label">Time<span class="text-danger">*</span></label>
        <div class="col-sm-4">
            <input asp-for="RegistrationTime" type="time" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Sex<span class="text-danger">*</span></label>
        <div class="col-sm-4">
            <select asp-for="Sex" class="form-control">
                <option>M</option>
                <option>F</option>
            </select>
        </div>

        <label class="col-sm-2 col-form-label">Patient Name<span class="text-danger">*</span></label>
        <div class="col-sm-4">
            <select asp-for="PatientTitle" class="form-control">
                <option>Mr.</option>
                <option>Miss.</option>
            </select>
            <input asp-for="PatientName" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">DOB</label>
        <div class="col-sm-4">
            <input asp-for="DOB" type="date" class="form-control" />
        </div>

        <label class="col-sm-2 col-form-label">Age<span class="text-danger">*</span></label>
        <div class="col-sm-4">
            <input asp-for="Age" type="number" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Guardian Name<span class="text-danger">*</span></label>
        <div class="col-sm-4">
            <select asp-for="GuardianTitle" class="form-control">
                <option>F/O</option>
                <option>S/O</option>
                <option>D/O</option>
                <option>M/O</option>
            </select>
            <input asp-for="Guardian" class="form-control" />
        </div>

        <label class="col-sm-2 col-form-label">Address<span class="text-danger">*</span></label>
        <div class="col-sm-4">
            <textarea asp-for="Address" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">District</label>
        <div class="col-sm-4">
            <input asp-for="District" class="form-control" />
        </div>

        <label class="col-sm-2 col-form-label">GST State<span class="text-danger">*</span></label>
        <div class="col-sm-4">
            <select asp-for="GSTState" class="form-control">
                <option>TamilNadu</option>
                <option>Karnataka</option>
                <option>Kerala</option>
                <option>Telangana</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Country<span class="text-danger">*</span></label>
        <div class="col-sm-4">
            <select asp-for="Country" class="form-control">
                <option>India</option>
                <option>USA</option>
                <option>UK</option>
                <option>UAE</option>
            </select>
        </div>

        <label class="col-sm-2 col-form-label">Pin Code</label>
        <div class="col-sm-4">
            <input asp-for="PinCode" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Place</label>
        <div class="col-sm-4">
            <input asp-for="Place" class="form-control" />
        </div>

        <label class="col-sm-2 col-form-label">Mobile No<span class="text-danger">*</span></label>
        <div class="col-sm-4">
            <input asp-for="MobileNo" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Guardian Aadhar</label>
        <div class="col-sm-4">
            <input asp-for="GuardianAadhar" class="form-control" />
        </div>

        <label class="col-sm-2 col-form-label">Patient Aadhar</label>
        <div class="col-sm-4">
            <input asp-for="PatientAadhar" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-4">
            <input asp-for="Email" type="email" class="form-control" />
        </div>

        <label class="col-sm-2 col-form-label">Occupation</label>
        <div class="col-sm-4">
            <input asp-for="Occupation" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Marital Status</label>
        <div class="col-sm-4">
            <select asp-for="MaritalStatus" class="form-control">
                <option>Single</option>
                <option>Married</option>
            </select>
        </div>

        <label class="col-sm-2 col-form-label">Blood Group</label>
        <div class="col-sm-4">
            <select asp-for="BloodGroup" class="form-control">
                <option>O+ve</option>
                <option>A+ve</option>
                <option>A-ve</option>
                <option>B+ve</option>
                <option>B-ve</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Allergic To</label>
        <div class="col-sm-4">
            <input asp-for="AllergicTo" class="form-control" />
        </div>

        <label class="col-sm-2 col-form-label">Consultant Doctor<span class="text-danger">*</span></label>
        <div class="col-sm-4">
            <select asp-for="ConsultantDoctor" class="form-control">
                <option>Dr.Ramesh</option>
                <option>Dr.Suresh</option>
                <option>Dr.Srini</option>
                <option>Dr.Ganesh</option>
                <option>Dr.Anand</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Ref. Doctor</label>
        <div class="col-sm-4">
            <select asp-for="RefDoctor" class="form-control">
                <option>Dr.Ramesh</option>
                <option>Dr.Suresh</option>
                <option>Dr.Srini</option>
                <option>Dr.Ganesh</option>
                <option>Dr.Anand</option>
            </select>
        </div>

        <label class="col-sm-2 col-form-label">Payment Terms</label>
        <div class="col-sm-4">
            <select asp-for="PaymentTerms" class="form-control">
                <option>Cash</option>
                <option>UPI</option>
                <option>Card</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Registration Type</label>
        <div class="col-sm-4">
            <select asp-for="RegistrationType" class="form-control">
                <option>General</option>
            </select>
        </div>

        <label class="col-sm-2 col-form-label">Comp/Ins/Camp</label>
        <div class="col-sm-4">
            <select asp-for="CompOrInsOrCamp" class="form-control">
                <option>Comp</option>
                <option>Ins</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Patient Condition</label>
        <div class="col-sm-4">
            <input asp-for="PatientCondition" class="form-control" />
        </div>

        <label class="col-sm-2 col-form-label">Reference/Phone No</label>
        <div class="col-sm-4">
            <input asp-for="ReferenceOrPicmeNo" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Photo</label>
        <div class="col-sm-4">
            <input type="file" name="Photo" class="form-control" />
        </div>

        <div class="col-sm-4 form-check">
            <input asp-for="IsActive" class="form-check-input" />
            <label class="form-check-label">Active</label>
        </div>
    </div>

    <div class="form-group row mt-3">
        <div class="col-sm-12 text-right">
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="@Url.Action("Index", "Patients")" class="btn btn-secondary">Exit</a>
        </div>
    </div>
</form>
