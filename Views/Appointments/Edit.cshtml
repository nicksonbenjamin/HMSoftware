@page "{id:int}"
@model ClinicApp.Appointments.EditModel
@{
    ViewData["Title"] = "Edit Appointment";
}

<h2>Edit Appointment</h2>

<form method="post">
    <input type="hidden" asp-for="Appointment.AppointmentID" />
    <div class="form-group">
        <label>Patient</label>
        <select asp-for="Appointment.PatientID" asp-items="Model.Patients" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Date & Time</label>
        <input asp-for="Appointment.AppointmentDate" type="datetime-local" class="form-control" />
    </div>
    <div class="form-group">
        <label>Reason</label>
        <textarea asp-for="Appointment.Reason" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Status</label>
        <select asp-for="Appointment.Status" class="form-control">
            <option>Scheduled</option>
            <option>Completed</option>
            <option>Cancelled</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
