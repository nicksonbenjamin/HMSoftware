@page "{id:int}"
@model ClinicApp.Appointments.DeleteModel
@{
    ViewData["Title"] = "Delete Appointment";
}

<h2>Delete Appointment</h2>

<h4>Are you sure you want to delete this appointment?</h4>
<div>
    <strong>Patient:</strong> @Model.Appointment.PatientName<br />
    <strong>Date:</strong> @Model.Appointment.AppointmentDate.ToString("g")<br />
    <strong>Reason:</strong> @Model.Appointment.Reason<br />
    <strong>Status:</strong> @Model.Appointment.Status
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
