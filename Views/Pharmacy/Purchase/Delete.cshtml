@model ClinicApp.ViewModels.PurchaseViewModel

<h3>Confirm Delete</h3>
<p>Are you sure you want to delete this purchase?</p>

<div>
    <p><strong>Supplier:</strong> @Model.SupplierId</p>
    <p><strong>Date:</strong> @Model.PurchaseDate.ToShortDateString()</p>
    <p><strong>Total:</strong> @Model.TotalAmount.ToString("C")</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.PurchaseId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
