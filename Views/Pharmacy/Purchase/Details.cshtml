@model ClinicApp.ViewModels.PurchaseViewModel
@{
    ViewData["Title"] = "Purchase Details";
}

<h2>Purchase Details</h2>

<div class="card mb-3">
    <div class="card-body">
        <div class="row mb-2">
            <div class="col-md-3"><strong>Purchase No:</strong> @Model.PurchaseNo</div>
            <div class="col-md-3"><strong>Date:</strong> @Model.PurchaseDate.ToString("dd-MM-yyyy")</div>
            <div class="col-md-6"><strong>Supplier:</strong> @Model.SupplierName</div>
        </div>

        <div class="row mb-2">
            <div class="col-md-3"><strong>Invoice No:</strong> @Model.SupplierInvoiceNo</div>
            <div class="col-md-3"><strong>Invoice Date:</strong> @(Model.SupplierInvoiceDate?.ToString("dd-MM-yyyy"))</div>
        </div>
    </div>
</div>

<table class="table table-bordered table-sm">
    <thead class="table-secondary text-center">
        <tr>
            <th>Product</th>
            <th>Batch</th>
            <th>Exp</th>
            <th>UOM</th>
            <th>Qty</th>
            <th>Free</th>
            <th>Rate</th>
            <th>MRP</th>
            <th>Disc%</th>
            <th>Tax%</th>
            <th>Net</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.BatchNo</td>
                <td>@item.ExpiryDate?.ToString("MM/yyyy")</td>
                <td>@item.UOM</td>
                <td class="text-end">@item.Qty</td>
                <td class="text-end">@item.FreeQty</td>
                <td class="text-end">@item.Rate</td>
                <td class="text-end">@item.MRP</td>
                <td class="text-end">@item.DiscountPercent</td>
                <td class="text-end">@item.TaxPercent</td>
                <td class="text-end">@item.NetAmount</td>
            </tr>
        }
    </tbody>
</table>

<div class="row mt-3">
    <div class="col-md-2"><strong>Total Qty:</strong> @Model.TotalQty</div>
    <div class="col-md-2"><strong>Total Amount:</strong> @Model.TotalAmount</div>
    <div class="col-md-2"><strong>Discount:</strong> @Model.TotalDiscount</div>
    <div class="col-md-2"><strong>Tax:</strong> @Model.TotalTax</div>
    <div class="col-md-2"><strong>Round Off:</strong> @Model.RoundOff</div>
    <div class="col-md-2"><strong>Net:</strong> @Model.NetAmount</div>
</div>

<div class="mt-3">
    <strong>Remarks:</strong>
    <p>@Model.Remarks</p>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back</a>
