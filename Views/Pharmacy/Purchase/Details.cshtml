@model ClinicApp.ViewModels.PurchaseViewModel

@{
    ViewData["Title"] = "Purchase Details";
}

<h2>Purchase Details - @Model.PurchaseNo</h2>

<!-- Top Info -->
<div class="row g-3 mb-3">
    <div class="col-md-2">
        <label>Purchase No</label>
        <input class="form-control" value="@Model.PurchaseNo" readonly />
    </div>
    <div class="col-md-2">
        <label>Purchase Date</label>
        <input class="form-control" value="@Model.PurchaseDate.ToString("yyyy-MM-dd")" readonly />
    </div>
    <div class="col-md-3">
        <label>Supplier</label>
        <input class="form-control" value="@Model.SupplierName" readonly />
    </div>
    <div class="col-md-2">
        <label>Supplier Invoice No</label>
        <input class="form-control" value="@Model.SupplierInvoiceNo" readonly />
    </div>
    <div class="col-md-3">
        <label>Supplier Invoice Date</label>
        <input class="form-control" value="@(Model.SupplierInvoiceDate?.ToString("yyyy-MM-dd") ?? "")" readonly />
    </div>
</div>

<!-- Purchase Items Table -->
<table class="table table-bordered table-sm align-middle" style="font-size: 0.9rem;">
    <thead class="table-primary text-center">
        <tr>
            <th>Product</th>
            <th>Batch No</th>
            <th>Expiry Date</th>
            <th>UOM</th>
            <th>Qty</th>
            <th>Free</th>
            <th>Rate</th>
            <th>MRP</th>
            <th>Disc %</th>
            <th>Tax %</th>
            <th>Net Amount</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Items != null && Model.Items.Any())
        {
            foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.BatchNo</td>
                    <td>@(item.ExpiryDate?.ToString("yyyy-MM-dd") ?? "")</td>
                    <td>@item.UOM</td>
                    <td class="text-end">@item.Qty</td>
                    <td class="text-end">@item.FreeQty</td>
                    <td class="text-end">@item.Rate.ToString("0.##")</td>
                    <td class="text-end">@item.MRP.ToString("0.##")</td>
                    <td class="text-end">@item.DiscountPercent.ToString("0.##")</td>
                    <td class="text-end">@item.TaxPercent.ToString("0.##")</td>
                    <td class="text-end">@item.NetAmount.ToString("0.##")</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="11" class="text-center">No items found</td></tr>
        }
    </tbody>
</table>

<!-- Totals -->
<div class="row g-3 mb-3">
    <div class="col-md-2">
        <label>Total Qty</label>
        <input class="form-control" value="@Model.TotalQty" readonly />
    </div>
    <div class="col-md-2">
        <label>Total Amount</label>
        <input class="form-control" value="@Model.TotalAmount" readonly />
    </div>
    <div class="col-md-2">
        <label>Total Discount</label>
        <input class="form-control" value="@Model.TotalDiscount" readonly />
    </div>
    <div class="col-md-2">
        <label>Total Tax</label>
        <input class="form-control" value="@Model.TotalTax" readonly />
    </div>
    <div class="col-md-2">
        <label>Round Off</label>
        <input class="form-control" value="@Model.RoundOff" readonly />
    </div>
    <div class="col-md-2">
        <label>Net Amount</label>
        <input class="form-control" value="@Model.NetAmount" readonly />
    </div>
</div>

<!-- Remarks -->
<div class="mb-3">
    <label>Remarks</label>
    <textarea class="form-control" rows="3" readonly>@Model.Remarks</textarea>
</div>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
