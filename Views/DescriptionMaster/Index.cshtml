@model IEnumerable<ClinicApp.ViewModels.DescriptionMasterViewModel>

@{
    ViewData["Title"] = "Description Master List";
}

<style>
    /* Light gray background for the entire table container */
    .table-container {
        background-color: #f8f9fa; /* light gray */
        padding: 15px;
        border-radius: 6px;
        margin-bottom: 20px;
    }

    /* Make table more compact */
    table.table {
        font-size: 0.85rem;
    }

    table.table th,
    table.table td {
        padding: 0.4rem 0.6rem;
        vertical-align: middle;
    }

    /* Softer borders */
    table.table-bordered {
        border: 1px solid #dee2e6;
    }
    table.table-bordered th,
    table.table-bordered td {
        border: 1px solid #dee2e6;
    }

    /* Hover effect */
    table.table-hover tbody tr:hover {
        background-color: #e9ecef;
    }

    /* Smaller buttons */
    .btn-sm img {
        width: 16px;
        height: 16px;
    }

    /* Optional: reduce the button padding for tighter look */
    .btn-sm {
        padding: 0.25rem 0.4rem;
        font-size: 0.75rem;
        line-height: 1.2;
        border-radius: 0.2rem;
    }
</style>

<h2>Description Master List</h2>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm">Create New Description</a>
</p>

<div class="table-container">
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.DescriptionCode)</th>
                <th>@Html.DisplayNameFor(model => model.DescriptionName)</th>
                <th>@Html.DisplayNameFor(model => model.Group)</th>
                <th>@Html.DisplayNameFor(model => model.Section)</th>
                <th>Applicable</th>
                <th>@Html.DisplayNameFor(model => model.NormalCharges)</th>
                <th>@Html.DisplayNameFor(model => model.EmergencyCharges)</th>
                <th>@Html.DisplayNameFor(model => model.DrCharges)</th>
                <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DescriptionCode</td>
                <td>@item.DescriptionName</td>
                <td>@item.Group</td>
                <td>@item.Section</td>
                <td>
                    @(item.Applicable_All ? "All " : "")
                    @(item.Applicable_LAB ? "LAB " : "")
                    @(item.Applicable_OP ? "OP " : "")
                    @(item.Consultation ? "Consultation" : "")
                </td>
                <td>@item.NormalCharges.ToString("C")</td>
                <td>@item.EmergencyCharges.ToString("C")</td>
                <td>@item.DrCharges.ToString("C")</td>
                <td>@(item.IsActive ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DescriptionId" class="btn btn-info btn-sm" title="Details">
                        <img src="~/images/details.jpg" alt="Details" />
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.DescriptionId" class="btn btn-primary btn-sm" title="Edit">
                        <img src="~/images/edit.jpg" alt="Edit" />
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.DescriptionId" class="btn btn-danger btn-sm" title="Delete">
                        <img src="~/images/delete.jpg" alt="Delete" />
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
