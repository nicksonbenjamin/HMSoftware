@model ClinicApp.ViewModels.PatientRegistrationViewModel

<style>
  .delete-container {
    border: 1px solid #ccc;
    padding: 10px;
    background: #fafafa;
    font-size: 12px;
  }
  .delete-title {
    font-size: 15px;
    font-weight: bold;
    margin-bottom: 6px;
    background: #e8eff6;
    padding: 5px 8px;
    border-bottom: 1px solid #c5d0da;
  }
  .photo-box {
    width: 90px;
    height: 110px;
    border: 1px dashed #888;
    background-size: cover;
    background-position: center;
  }
  .field-row {
    margin-bottom: 6px;
  }
  .label-cell { font-weight: 600; }
</style>

<div class="delete-container">
  <div class="delete-title">Confirm Delete</div>
  <div class="field-row"><span class="label-cell">UHID No:</span> @Model.UHIDNo</div>
  <div class="field-row"><span class="label-cell">Patient Name:</span> @Model.PatientName</div>
  <div class="field-row"><span class="label-cell">Age:</span> @Model.Age</div>
  <div class="field-row"><span class="label-cell">Mobile No:</span> @Model.MobileNo</div>
  <div class="field-row"><span class="label-cell">Photo:</span></div>
  <div class="photo-box" style="background-image: @(Model.PhotoBase64 != null ? $"url('{Model.PhotoBase64}')" : "none")"></div>

  <form asp-action="DeleteConfirmed" method="post" class="mt-3">
    <input type="hidden" asp-for="PatientId" />
    <button type="submit" class="btn btn-danger btn-sm px-3">Delete</button>
    <a asp-action="Index" class="btn btn-secondary btn-sm px-3 ms-1">Cancel</a>
  </form>
</div>
