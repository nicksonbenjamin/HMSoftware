@model ClinicApp.ViewModels.LedgerMasterViewModel

@{
    ViewData["Title"] = "Delete Ledger";
}

<h2>Delete Ledger</h2>

<h4>Are you sure you want to delete this ledger?</h4>
<hr />

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label">Ledger Type:</label>
        <p class="form-control-static">@Model.LedgerType</p>
    </div>

    <div class="form-group">
        <label class="control-label">Ledger Name:</label>
        <p class="form-control-static">@Model.LedgerName</p>
    </div>

    <div class="form-group">
        <label class="control-label">Place:</label>
        <p class="form-control-static">@Model.Place</p>
    </div>

    <div class="form-group">
        <label class="control-label">GSTIN:</label>
        <p class="form-control-static">@Model.GSTIN</p>
    </div>

    <div class="form-group">
        <label class="control-label">GST State:</label>
        <p class="form-control-static">@Model.GSTState</p>
    </div>

    <div class="form-group">
        <label class="control-label">Contact Person:</label>
        <p class="form-control-static">@Model.ContactPerson</p>
    </div>

    <div class="form-group">
        <label class="control-label">Phone No:</label>
        <p class="form-control-static">@Model.PhoneNo</p>
    </div>

    <div class="form-group">
        <label class="control-label">Mobile No:</label>
        <p class="form-control-static">@Model.MobileNo</p>
    </div>

    <div class="form-group">
        <label class="control-label">Email:</label>
        <p class="form-control-static">@Model.Email</p>
    </div>

    <div class="form-group">
        <label class="control-label">Drug License No:</label>
        <p class="form-control-static">@Model.DrugLicenseNo</p>
    </div>

    <div class="form-group">
        <label class="control-label">Remarks:</label>
        <p class="form-control-static">@Model.Remarks</p>
    </div>

    <div class="form-group">
        <label class="control-label">Active:</label>
        <p class="form-control-static">@Model.IsActive</p>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

<script type="text/javascript">
    $(document).ready(function() {
        // Remove 'active' class from all menu items
        $(".menu li a").removeClass("active");

        // Add 'active' class to the clicked item's parent <li>
        $(".ledgerMaster").addClass("active");
    });
</script>