@model ClinicApp.ViewModels.LedgerMasterViewModel

@{
    ViewData["Title"] = "Create Ledger";
}

<h2>Create Ledger</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="LedgerType" class="control-label"></label>
        <select asp-for="LedgerType" class="form-control">
            <option value="">-- Select Ledger Type --</option>
            <option value="Company">Company</option>
            <option value="Supplier">Supplier</option>
            <option value="Customer">Customer</option>
        </select>
        <span asp-validation-for="LedgerType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LedgerName" class="control-label"></label>
        <input asp-for="LedgerName" class="form-control" />
        <span asp-validation-for="LedgerName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <textarea asp-for="Address" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Place" class="control-label"></label>
        <input asp-for="Place" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GSTIN" class="control-label"></label>
        <input asp-for="GSTIN" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="GSTState" class="control-label"></label>
        <select asp-for="GSTState" class="form-control">
            <option value="">-- Select GST State --</option>
            <option value="33-Tamil Nadu">33-Tamil Nadu</option>
            <option value="29-Karnataka">29-Karnataka</option>
            <option value="27-Maharashtra">27-Maharashtra</option>
            <!-- Add more states as needed -->
        </select>
    </div>

    <div class="form-group">
        <label asp-for="CreditDays" class="control-label"></label>
        <input asp-for="CreditDays" class="form-control" type="number" />
    </div>

    <div class="form-group">
        <label asp-for="ContactPerson" class="control-label"></label>
        <input asp-for="ContactPerson" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNo" class="control-label"></label>
        <input asp-for="PhoneNo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MobileNo" class="control-label"></label>
        <input asp-for="MobileNo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" type="email" />
    </div>

    <div class="form-group">
        <label asp-for="DrugLicenseNo" class="control-label"></label>
        <input asp-for="DrugLicenseNo" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Remarks" class="control-label"></label>
        <textarea asp-for="Remarks" class="form-control"></textarea>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsActive" class="form-check-input" />
        <label asp-for="IsActive" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    $(document).ready(function() {
        // Remove 'active' class from all menu items
        $(".menu li a").removeClass("active");

        // Add 'active' class to the clicked item's parent <li>
        $(".ledgerMaster").addClass("active");
    });
</script>