@model ClinicApp.ViewModels.ApplicationUserViewModel
@{
    ViewData["Title"] = "Edit Application User";
}

<h2>Edit Application User</h2>

<form method="post">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label>Login Name</label>
        <input asp-for="LoginNamee" class="form-control" />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="LoginPassword" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Middle Name</label>
        <input asp-for="MiddleName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role</label>
        <select asp-for="RoleID" asp-items="Model.Roles" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
<script type="text/javascript">
    $(document).ready(function() {
        // Remove 'active' class from all menu items
        $(".menu li a").removeClass("active");

        // Add 'active' class to the clicked item's parent <li>
        $(".users").addClass("active");
    });
</script>