@model ClinicApp.ViewModels.ApplicationUserViewModel

@{
    ViewData["Title"] = "Delete Application User";
}

<h2>Delete Application User</h2>

<h4>Are you sure you want to delete this user?</h4>
<div>
    <strong>Login:</strong> @Model.LoginNamee<br />
    <strong>Name:</strong> @Model.FirstName @Model.MiddleName @Model.LastName
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
<script type="text/javascript">
    $(document).ready(function() {
        // Remove 'active' class from all menu items
        $(".menu li a").removeClass("active");

        // Add 'active' class to the clicked item's parent <li>
        $(".users").addClass("active");
    });
</script>