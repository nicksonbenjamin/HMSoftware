@page "{id:int}"
@model ClinicApp.AttendingStaff.EditModel
@{
    ViewData["Title"] = "Edit Staff Member";
}

<h2>Edit Staff Member</h2>

<form method="post">
    <input type="hidden" asp-for="Staff.StaffID" />
    <div class="form-group">
        <label>First Name</label>
        <input asp-for="Staff.FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="Staff.LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role</label>
        <input asp-for="Staff.Role" class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Staff.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Phone Number</label>
        <input asp-for="Staff.PhoneNumber" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
