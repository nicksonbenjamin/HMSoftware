@model ClinicApp.Models.DoctorAI

<h2>AI Helper</h2>

<form asp-action="Index" method="post" enctype="multipart/form-data">
    <!-- Symptoms input -->
    <div class="mb-3">
        <label asp-for="SearchResult" class="form-label">Enter Search </label>
        <input asp-for="SearchResult" class="form-control" />
        <span asp-validation-for="SearchResult" class="text-danger"></span>
    </div>
   
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<hr />

<!-- Display Doctor Recommendation -->
@if (!string.IsNullOrEmpty(Model?.SearchResult))
{
    <div class="mt-3 alert alert-info">
        <h4>Recommendation:</h4>
        <p>@Model.SearchResult</p>
    </div>
}


