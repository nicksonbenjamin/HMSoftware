@model ClinicApp.ViewModels.ApplicationUserViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="outercontainer">
    <div class="newcontainer">
        <h2>Login</h2>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="LoginNamee">Login Name</label>
                <input asp-for="LoginNamee" class="form-control" />
                <span asp-validation-for="LoginNamee" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LoginPassword">Login Password</label>
                <input asp-for="LoginPassword" type="password" class="form-control" />
                <span asp-validation-for="LoginPassword" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model == null ? "" : Model.ErrorMessage))
            {
                <div class="text-danger">@Model.ErrorMessage</div>
            }
            <br />
            <br />
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
</div>