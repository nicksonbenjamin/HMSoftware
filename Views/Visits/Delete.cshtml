@page "{id}"
@model ClinicApp.Visits.DeleteModel
@{
    ViewData["Title"] = "Delete Visit";
}

<h2>Delete Visit</h2>

<h4>Are you sure you want to delete this visit?</h4>
<div>
    <strong>Patient:</strong> @Model.Visit.PatientName<br />
    <strong>Staff:</strong> @Model.Visit.StaffName<br />
    <strong>Date:</strong> @Model.Visit.VisitDate.ToString("g")<br />
    <strong>Notes:</strong> @Model.Visit.Notes
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>
