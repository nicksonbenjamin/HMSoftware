@model IEnumerable<ClinicApp.ViewModels.CommonMasterViewModel>

@{
    ViewData["Title"] = "Common Master List";
}

<style>
    /* Existing styles you already have, plus the new compact action button styles */
    
    /* Action buttons styles */
    td.actions {
        text-align: center;
        white-space: nowrap;
        padding: 0.2rem 0.3rem;
    }

    td.actions .btn {
        padding: 0.15rem 0.3rem;
        font-size: 0.75rem;
        min-width: 28px;
        height: 28px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin: 0 2px;
        border-radius: 3px;
    }

    td.actions .btn i {
        font-size: 14px;
        vertical-align: middle;
    }
</style>

<h4 class="mb-2">Common Master List</h4>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm">+ Create New Master</a>
</p>

<div class="table-container">
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th class="text-center">Actions</th>
                <th>Master Type</th>
                <th>Master Name</th>
            </tr>

            <!-- Filter Row -->
            <tr class="filter-row">
                <th></th>
                <th><input type="text" id="filterType" class="form-control form-control-sm" placeholder="Search Type" /></th>
                <th><input type="text" id="filterName" class="form-control form-control-sm" placeholder="Search Name" /></th>
            </tr>
        </thead>

        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="actions">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Details">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success" title="Edit">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
                <td>@item.MasterType</td>
                <td>@item.MasterName</td>
            </tr>
        }
        </tbody>
    </table>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const filterInputs = {
        type: document.getElementById('filterType'),
        name: document.getElementById('filterName')
    };

    const rows = document.querySelectorAll('tbody tr');

    function applyFilters() {
        const typeVal = filterInputs.type.value.toLowerCase();
        const nameVal = filterInputs.name.value.toLowerCase();

        rows.forEach(row => {
            const cells = row.querySelectorAll('td');
            const typeText = cells[1]?.textContent.toLowerCase() || "";
            const nameText = cells[2]?.textContent.toLowerCase() || "";

            const matches = typeText.includes(typeVal) && nameText.includes(nameVal);
            row.style.display = matches ? '' : 'none';
        });
    }

    Object.values(filterInputs).forEach(input => {
        input.addEventListener('input', applyFilters);
    });
});
</script>
