@model ClinicApp.ViewModels.CommonMasterViewModel

@{
    ViewData["Title"] = "Delete Common Master";
}

<div class="container mt-4">
    <h2 class="text-danger mb-4"><i class="fa-solid fa-trash"></i> Delete Common Master</h2>
    <h5 class="text-muted">Are you sure you want to delete this record?</h5>
    <hr />

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.MasterType)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.MasterType)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(m => m.MasterName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(m => m.MasterName)</dd>

              
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger me-2">
            <i class="fa-solid fa-trash"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fa-solid fa-arrow-left"></i> Cancel
        </a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
