@model ClinicApp.ViewModels.CommonMasterViewModel

@{
    ViewData["Title"] = "Common Master - Edit";
}

<style>
    .form-section {
        border: 1px solid #0b5a8a;
        background-color: #e9f4fb;
        padding: 15px;
        margin-bottom: 20px;
    }
    .form-section h4 {
        background-color: #0b5a8a;
        color: white;
        padding: 8px;
        margin: -15px -15px 10px -15px;
        font-size: 1.1rem;
    }
</style>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-section">
        <h4>Edit Common Master</h4>

        <div class="row mb-2">
            <div class="col-md-6">
                <label asp-for="MasterType"></label>
                <input asp-for="MasterType" class="form-control" />
            </div>

            <div class="col-md-6">
                <label asp-for="MasterName"></label>
                <input asp-for="MasterName" class="form-control" />
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-md-12 text-end">
                <button type="submit" class="btn btn-success">Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</form>
