@model ClinicApp.ViewModels.SupplierMasterViewModel

@{
    ViewData["Title"] = "Supplier Details";
}

<h2>Supplier Details</h2>
<br />

<form>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Supplier ID</label>
        <div class="col-sm-4 col-form-label">
            @Model.SupplierId
        </div>

        <label class="col-sm-2 col-form-label" asp-for="SupplierName"></label>
        <div class="col-sm-4 col-form-label">
            @Model.SupplierName
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="ContactPerson"></label>
        <div class="col-sm-4 col-form-label">
            @Model.ContactPerson
        </div>

        <label class="col-sm-2 col-form-label" asp-for="MobileNo"></label>
        <div class="col-sm-4 col-form-label">
            @Model.MobileNo
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Email"></label>
        <div class="col-sm-4 col-form-label">
            @Model.Email
        </div>

        <label class="col-sm-2 col-form-label" asp-for="GSTNo"></label>
        <div class="col-sm-4 col-form-label">
            @Model.GSTNo
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label" asp-for="Address"></label>
        <div class="col-sm-10 col-form-label">
            @Model.Address
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Status</label>
        <div class="col-sm-4 col-form-label">
            <strong>@(Model.IsActive ? "Active" : "Inactive")</strong>
        </div>
    </div>

    <br />
    <div class="form-group row mt-3">
        <div class="col-sm-12 text-right">
            <a asp-action="Edit" asp-route-id="@Model.SupplierId" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Exit</a>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<script type="text/javascript">
    $(document).ready(function () {
        // Remove 'active' class from all menu items
        $(".menu li a").removeClass("active");

        // Add 'active' class to SupplierMaster menu
        $(".suppliermaster").addClass("active");
    });
</script>
