@model ClinicApp.ViewModels.SupplierMasterViewModel

@{
    ViewData["Title"] = "Delete Supplier";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this supplier?</h3>
<div>
    <h4>Supplier</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Supplier Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SupplierName)
        </dd>
        <dt class="col-sm-2">
           Contact Person
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ContactPerson)
        </dd>        
        <dt class="col-sm-2">
           Mobile No
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MobileNo)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SupplierId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </form>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        // Remove 'active' class from all menu items
        $(".menu li a").removeClass("active");

        // Add 'active' class to SupplierMaster menu
        $(".suppliermaster").addClass("active");
    });
</script>
